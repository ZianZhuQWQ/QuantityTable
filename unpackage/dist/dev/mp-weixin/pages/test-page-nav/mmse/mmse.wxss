.page-wrap {
  display: flex;
  flex-direction: column;
  height: 100vh;
}
.page-wrap .content-wrap {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}
.page-wrap .content-wrap .item-wrap .tips {
  font-weight: bold;
  font-size: 45rpx;
  text-align: center;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  display: flex;
  box-sizing: border-box;
  padding: 8rpx;
  width: 100%;
  min-height: 300rpx;
  background-color: #e7eaec;
  border-radius: 8px;
}
.page-wrap .content-wrap .item-wrap .tips .img {
  display: inline-block;
  width: 80%;
  margin-top: 16px;
}
.page-wrap .content-wrap .item-wrap .result {
  margin-top: 24px;
}
.page-wrap .content-wrap .score {
  width: 100%;
}
.page-wrap .foot {
  border-top: 1px solid #dddddd;
  padding: 8px 12px;
  display: flex;
  justify-content: space-between;
  padding: 8px 12px;
  background-color: #ffffff;
  gap: 10px;
}
.page-wrap .foot button {
  flex: 1;
  height: 40px;
  background-color: #5cd7aa;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}

