.page-wrap {
  display: flex;
  flex-direction: column;
  width: 100vw;
  height: 100vh;
}
.page-wrap .search-wrap {
  display: flex;
  align-items: center;
  border-radius: 8px;
  background-color: #efeff5;
  padding: 6px;
  margin: 12px 12px 16px 12px;
}
.page-wrap .search-wrap .input-wrap {
  position: relative;
  flex: 1;
}
.page-wrap .search-wrap .input-wrap .search-input {
  background-color: #fff;
  border-radius: 8px;
  height: 30px;
  flex: 1;
  padding: 2px 6px;
}
.page-wrap .search-wrap .input-wrap .placeholder {
  position: absolute;
  left: 50%;
  top: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  color: #aaaaaa;
  pointer-events: none;
  display: flex;
  align-items: center;
}
.page-wrap .search-wrap .input-wrap .placeholder .search-icon {
  height: 20px;
  width: 20px;
}
.page-wrap .search-wrap .close {
  padding: 0px 16px;
  color: #90d7ac;
  font-size: 16px;
  white-space: nowrap;
}
.page-wrap .content-wrap {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}
.page-wrap .content-wrap.add-user {
  padding: 16px;
}
.page-wrap .content-wrap.add-user .inputWrap {
  margin-bottom: 24px;
}
.page-wrap .content-wrap.add-user .inputWrap .label {
  font-size: 14px;
  color: #666666;
  margin-bottom: 8px;
}
.page-wrap .content-wrap .result-list {
  flex: 1;
  overflow: auto;
}
.page-wrap .foot {
  border-top: 1px solid #dddddd;
  padding: 8px 12px;
  display: flex;
  justify-content: space-between;
  padding: 8px 24px;
  background-color: #ffffff;
}
.page-wrap .foot button {
  margin-right: 16px;
  flex: 1;
  height: 46px;
  background-color: #5cd7aa;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}
.page-wrap .foot button:last-child {
  margin-right: 0;
}
.page-wrap .foot button.default {
  background-color: #ffffff;
  color: #000000;
}

