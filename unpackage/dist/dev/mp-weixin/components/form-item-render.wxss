.form-item {
  font-size: 13px;
  font-weight: 400;
  margin-bottom: 32px;
}
.form-item .label {
  font-size: 14px;
  color: #666666;
  margin-bottom: 8px;
}
.form-item .value-wrap {
  color: #000000;
}
.form-item .value-wrap .input-placeholder {
  color: #cccccc;
}
.form-item .value-wrap .radio-items-wrap.column,
.form-item .value-wrap .checkbox-items-wrap.column {
  display: flex;
  flex-direction: column;
}
.form-item .value-wrap .radio-items-wrap.column label,
.form-item .value-wrap .checkbox-items-wrap.column label {
  width: 100%;
}
.form-item .value-wrap .radio-items-wrap.column label:nth-child(n),
.form-item .value-wrap .checkbox-items-wrap.column label:nth-child(n) {
  margin-bottom: 8px;
}
.form-item .value-wrap .radio-items-wrap label,
.form-item .value-wrap .checkbox-items-wrap label {
  min-width: 27%;
  width: -webkit-max-content;
  width: max-content;
  display: inline-block;
}
.form-item .value-wrap .radio-items-wrap label:nth-child(n),
.form-item .value-wrap .checkbox-items-wrap label:nth-child(n) {
  margin-right: 16px;
}
.form-item .value-wrap .radio-items-wrap .text,
.form-item .value-wrap .checkbox-items-wrap .text {
  font-size: 13px;
}

